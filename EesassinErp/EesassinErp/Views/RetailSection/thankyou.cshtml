
@{
    ViewBag.Title = "thankyou";
    Layout = "~/Views/Common/_RetailLayout.cshtml";
}
<script src="~/scripts/RetailJsLib/LicenseRequestMasterController.js"></script>
<div class="pagecontentbody" ng-init="SetSessionforConfirm()">
    <div class="pagebody">
        <div class="col-md-12 pageheader">
            <div class="row">
                <div class="col-md-9">
                </div>
                <div class="col-sm-3 text-end">
                    <a class="btn btn-dark" href="@Url.Action("Dashboard","RetailSection")">Back</a>
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <h2 class="mb-5 text-center">Thank You!</h2>
                    <div class="card thankyou">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-12">
                                    <div class="text-center tydiv">
                                        <img src="~/compliance/images/successIcon.png" />
                                    </div>
                                    <h3 class="text-center">Payment {{PaymentStatus}}!</h3>
                                    <p class="text-center text-white-50">{{resmsg}}</p>
                                    <p></p>
                                    <hr />
                                    <p class="text-center text-white-50">Total Payment</p>
                                    <h3 class="text-center">
                                       {{Amount}}
                                    </h3>
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-md-6">
                                    <div class="subbox">
                                        <p class="text-white-50">OrderId</p>
                                        <strong>{{OrderId}}</strong>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="subbox">
                                        <p class="text-white-50">Payment Time</p>
                                        <strong>{{ResponseCompleteOn}}</strong>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="subbox">
                                        <p class="text-white-50">Payment Method</p>
                                        <strong>{{PaymentStatus}}</strong>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="subbox">
                                        <p class="text-white-50">Transcation Id</p>
                                        <strong>{{TransId}}</strong>
                                    </div>
                                </div>
                            </div>
                            <div class="row my-3">
                                <div class="col-md-12 text-center">
                                    <a href="#" class="text-white-50 text-decoration-none gpdf"><i class="fa fa-download"></i> Get PDF Receipt</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
