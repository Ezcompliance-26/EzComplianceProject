        </div>*@
                                        </div>
                                        <div class="col-md-4 col-sm-6 col-xs-12 mgbt-xs-15">
                                            <label class="control-label">Subject Line<span class="vd_red">*</span></label>
                                            <div class="input-box">
                                                @Html.TextBox("txtSubjectLine", "", new { @class = "form-control clear validate", @placeholder = "", @ng_model = "SubjectLine" })
                                                <div class="text-box-msg-r">
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-md-4 col-sm-6 col-xs-12 mgbt-xs-15">
                                            <label class="control-label">State Central Act Tittle </label>
                                            <div class="input-box">
                                                @Html.TextBox("txtActtitle", "", new { @class = "form-control clear ", @placeholder = "", @ng_model = "ActTittle" })
                                                <div class="text-box-msg-r">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4 col-sm-6 col-xs-12 mgbt-xs-15">
                                            <label class="control-label">Govt. Department<span class="vd_red">*</span></label>
                                            <div class="input-box" ng-init="AllDepartment()">
                                                <select class="form-control form-select validate" ng-model="DepartmentId" ng-change="BindNoticeStoreStatus(DepartmentId)">
                                                    <option value="">Select</option>
                                                    <option ng-repeat="x in NoticeDepartmentList" value="{{x.DepartmentId}}">{{x.DepartmentName}}</option>
                                                </select>
                                                <div class="text-box-msg-r">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4 col-sm-6 col-xs-12 mgbt-xs-15">
                                            <label class="control-label">Notification Number</label>
                                            <div class="input-box">
                                                <input class="form-control clear" id="txtNotificationNumber" ng-model="NotificationNumber" type="text"  onblur="validateNumberAndDecimalOnly('#txtPincode')" />
                                                <div class="text-box-msg-r">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4 col-sm-6 col-xs-12 mgbt-xs-15">
                                            <label class="control-label">Date of Notification<span class="vd_red">*</span></label>
                                            <div class="input-box">
                                                @Html.TextBox("txtdateofNotification", "", new { @class = "form-control clear validate", @type = "date", @placeholder = "", @ng_model = "DateNot" })
                                                <div class="text-box-msg-r">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4 col-sm-6 col-xs-12 mgbt-xs-15">
                                            <label class="control-label">Select State<span class="vd_red">*</span> </label>
                                            <div class="input-box" ng-init="AllState()">
                                                <select id="ddlstate" autocomplete='address-level2' class="select2 form-control validate" ng-change="AllCity()" ng-model="StateId">
                                                    <option value="">Select State</option>
                                                    <option ng-repeat="x in AllStateList" value="{{x.SATE_CODE}}">{{x.STATE_NM}}</option>
                                                </select>
                                                <div class="text-box-msg-r">
                                                </div>
                                            </div>
                                        </div>


                                        <div class="col-md-4 col-sm-6 col-xs-12 mgbt-xs-15">
                                            <label class="control-label">Effective Date of Notification<span class="vd_red">*</span></label>
                                            <div class="input-box">
                                                @Html.TextBox("txteffofNotification", "", new { @class = "form-control clear validate", @type = "date", @placeholder = "", @ng_model = "EffectiveDate" })
                                                <div class="text-box-msg-r">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4 col-sm-6 col-xs-12 mgbt-xs-15">
                                            <label class="control-label">Upload Files, Format will be PDF</label>
                                            <div class="input-box">
                                                @*ng-model="AdminFileDoc"*@
                                                @*<input type="file" id="fuCandidatePhoto{{$index}}" onchange="angular.element(this).scope().Adminshow(this, '#AlbumIcon')" ng-disabled="loginType !='1'" file-model="AdminFileDoc" accept="application/pdf">*@
                                                <input type="file" id="fuCandidatePhoto{{$index}}" ng-disabled="loginType !='1'" file-model="AdminFileDoc" accept="application/pdf">
                                                <div class="text-box-msg-r">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                            @*<textarea ui-tinymce="tinymceOptions" class="text1" id="mytextarea" ng-model="Summary">Hello, World!</textarea>*@
                                            @Html.TextArea("txtHeaderTemplate", "", new { @class = "form-control clear", @placeholder = "", @ng_model = "Summary", @name = "txtHeaderTemplate", @id = "txtHeaderTemplate", @rows = "10", @cols = "80" })
                                            <script>$(document).ready(function () { CKEDITOR.replace('txtHeaderTemplate'); });</script>
                                            <div class="text-box-msg-r"></div>

                                        </div>
                                        @*<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                {{content}}
                                            </div>*@
                                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 ">
                                            @Html.Partial("ActionView")
                                        </div>

                                    </form>
                                </div>
                            </div>
                            @Html.Partial("SearchAngularJs")
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Row -->
    </div>

</div>

