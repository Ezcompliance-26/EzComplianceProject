                    <input type="checkbox" class="form-check-input" id="{{option.PartyId}}" ng-click="toggleSelection(option)" ng-checked="selectedOptions.indexOf(option) > -1">
                    <label class="form-check-label" for="{{option.PartyId}}">{{ option.PartyName }}</label>
                </div>
            </div>
        </div>
        <div class="col-md-4">

