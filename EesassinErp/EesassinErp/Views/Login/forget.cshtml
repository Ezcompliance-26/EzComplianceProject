    <script>

        $(window).ready(function()
        {
            $("#txtContactNo").inputFilter(function (value) {
                return /^\d*$/.test(value);    // Allow digits only, using a RegExp
            });
            $(".login-welcome-back-main-container-button-container").click(function () {
                $(".login-colored-container").removeClass("login-colored-container-left");
                $(".login-welcome-back").removeClass("login-welcome-back-active");
                $(".login-create-container").removeClass("login-create-container-active");
                $(".login-login-container").removeClass("login-login-container-inactive");
                $(".login-hello-container").removeClass("login-hello-container-inactive");
                $(".login-colored-container").addClass("login-colored-container-right");
                $(".login-welcome-back").addClass("login-welcome-back-inactive");
                $(".login-create-container").addClass("login-create-container-inactive");
                $(".login-login-container").addClass("login-login-container-active");
                $(".login-hello-container").addClass("login-hello-container-active");
            });


            $(".input-effect input").val("");

            $(".input-effect input").focusout(function () {
                if ($(this).val() != "") {
                    $(this).addClass("has-content");
                } else {
                    $(this).removeClass("has-content");
                }
            })


            $("#txtPassWord").focus(function () {
                //debugger;
                var text_val = $(this).val();
                if (text_val === "") {

                    if ($('#PasswordShowHide').css('display') == 'block') {
                        $('#PasswordShow').css("display", "none");
                        $('#LoginLock').css("display", "none");
                    } else {
                        $('#LoginLock').css("display", "none");
                        $('#PasswordShow').css("display", "block");
                    }
                }
                else
                {
                    if ($('#PasswordShowHide').css('display') == 'block') {
                        $('#PasswordShow').css("display", "none");
                        $('#LoginLock').css("display", "none");
                    } else {
                        $('#LoginLock').css("display", "none");
                        $('#PasswordShow').css("display", "block");
                    }
                }
            }).blur(function () {
                if ($(this).val().length === 0) {
                    $('#PasswordShow').css("display", "none");
                    $('#PasswordShowHide').css("display", "none");
                    $('#LoginLock').css("display", "block");
                    $('#txtPassWord').attr('type', 'password');
                }
            });
            $('#PasswordShow').click(function () {
                $('#PasswordShow').css("display", "none");
                $('#LoginLock').css("display", "none");
                $('#PasswordShowHide').css("display", "block");
                $('#txtPassWord').attr('type', 'text');
            });
            $('#PasswordShowHide').click(function () {
                $('#PasswordShowHide').css("display", "none");
                $('#LoginLock').css("display", "none");
                $('#PasswordShow').css("display", "block");
                $('#txtPassWord').attr('type', 'password');
            });
            $('#SupportOH').click(function () {
                var hasClass = $('#SupportO').hasClass('show');
                if (hasClass === true) {
                    $('#SupportO').removeClass('show');
                    $('#SupportM').removeClass('move');
                }
                else {
                    $('#SupportO').addClass('show');
                    $('#SupportM').addClass('move');
                }
            });
        });
        $(".removespacer").keyup(function () {
            $(this).val($(this).val().replace(/\s/g, ""));
        });
    </script>


