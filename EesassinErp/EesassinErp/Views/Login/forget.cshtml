    <script>
        $(document).ready(function () {
            var focusableEls = document.getElementById('loginbox').querySelectorAll('a, button, input')
            $.each(focusableEls, function (index, elem) {
                elem.addEventListener('keydown', function (e) {
                    //UP Arrow--->Move Prev as like Shift+Tab keypress
                    if (e.keyCode == "38") {
                        if (index == 0) {
                            for (var i = focusableEls.length; i > 0; i--) {
                                if (!$(focusableEls[i - 1]).attr('disabled')) {
                                    focusableEls[i - 1].focus();
                                    e.preventDefault();
                                    return;
                                }
                                e.preventDefault();
                            }
                        }
                        else {
                            for (var i = index; i > 0; i--) {
                                if (!$(focusableEls[i - 1]).attr('disabled')) {
                                    focusableEls[i - 1].focus();
                                    e.preventDefault();
                                    return;
                                }
                                e.preventDefault();
                            }
                        }
                        e.preventDefault();
                    }
                    if (e.keyCode == "40") {
                        //Down Arrow--->Move Next as like Tab keypress
                        if (index == focusableEls.length - 1) {
                            for (var i = -1; i < focusableEls.length; i++) {
                                if (!$(focusableEls[i + 1]).attr('disabled')) {
                                    focusableEls[i + 1].focus();
                                    e.preventDefault();
                                    return;
                                }
                                e.preventDefault();
                            }
                        }
                        else {
                            for (var i = index; i < focusableEls.length; i++) {
                                if (!$(focusableEls[i + 1]).attr('disabled')) {
                                    focusableEls[i + 1].focus();
                                    e.preventDefault();
                                    return;
                                }
                                e.preventDefault();
                            }
                        }
                        e.preventDefault();
                    }

                });
            });
        });
    </script>
