@{
    ViewBag.Title = "Site Manager";
    ViewBag.TitleList = "Sort By Column";
    ViewBag.Version = System.Configuration.ConfigurationManager.AppSettings["version"];
    Layout = "~/Views/Common/_IframeMaster.cshtml";
}

<script src="~/Scripts/myjslib/PartySiteManagerController.js?Ver=@ViewBag.Version"></script>
@*<script src="~/Scripts/myjslib/ddlBindings.js"></script>*@
<input type="hidden" id="Id" name="Id" value="" ng-model="hfId" />
<input type="hidden" id="Id1" name="Id1" value="" ng-model="hfId1" />
<div class="autohide-scroll autoheightset">
    <div class="br-pageheader">
        <!-- Title -->
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 root-t-p-n ">
            <h5 class="txt-dark">Site Manager</h5>
        </div>
        <!-- Breadcrumb -->
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 hidden-sm">
            <ol class="breadcrumb">
                <li><span>Global</span></li>
                <li><span>Master</span></li>
                <li class="active"><span>Site Manager</span></li>
            </ol>
        </div>

    </div>
    <div class="br-pagebody">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="panel panel-default card-view shadow-base panel-refresh panel-Search-refresh">
                    <div class="refresh-container">
                        <div class="preloader">
                            <div class="circles-1">
                                <div class="circles-1-center"></div>
                                <div class="circles-1"></div>
                                <div class="circles-1"></div>
                                <div class="circles-1"></div>
                                <div class="circles-1"></div>
                                <div class="circles-1"></div>
                                <div class="circles-1"></div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-wrapper ">
                        <div class="panel-body">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 no-padding ">
                                <div class="collapse in" id="collapseinputbox">
                                    <form id="user-form">
                                        <div class="col-md-4 col-sm-6 col-xs-12 mgbt-xs-15">
                                            <label class="control-label">Party Type<span class="vd_red">*</span></label>
                                            <div class="input-box">
                                                <select id="ddlVT" autocomplete='address-level2' class="select2 form-control validate" ng-model="PartyType" ng-change="AllParty()">
                                                    <option value="">Select </option>
                                                    <option value="Vendor">Vendor</option>
                                                    <option value="Auditor">Auditor</option>
                                                    <option value="Client">Client</option> 
                                                </select>
                                                <div class="text-box-msg-r">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4 col-sm-6 col-xs-12 mgbt-xs-15">
                                            <label class="control-label">Party Name<span class="vd_red">*</span></label>
                                            <div class="input-box">
                                                
                                                <select id="ddlPartyId" autocomplete='address-level2' class="select2 form-control validate" ng-model="PartyId">
                                                    <option value="">Select Party</option>
                                                    <option ng-repeat="x in AllPartyList" value="{{x.PartyId}}">{{x.PartyName}}</option>
                                                </select>
                                                <div class="text-box-msg-r">
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-md-4 col-sm-6 col-xs-12 mgbt-xs-15">
                                            <label class="control-label">Site Name<span class="vd_red">*</span></label>
                                            <div class="input-box">
                                                @Html.TextBox("txtSiteName", "", new { @class = "form-control clear validate", @placeholder = "", @ng_model = "SiteName" })
                                                <div class="text-box-msg-r">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4 col-sm-6 col-xs-12 mgbt-xs-15" style="display:none">
                                            <label class="control-label">Manpower Type<span class="vd_red">*</span></label>
                                            <div class="input-box">
                                             
                                                <select id="ddlManpowertype" autocomplete='address-level2' class="select2 form-control" 
                                                        ng-init="BindManpower()" ng-model="Manpowertype">
                                                    <option value="">Select</option>
                                                    <option ng-repeat="x in  ManpowerList" value="{{x.LCode}}">{{x.LValue}}</option>
                                                </select>
                                                
                                                
                                                    <div class="text-box-msg-r">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4 col-sm-6 col-xs-12 mgbt-xs-15">
                                            <label class="control-label">Manpower Count</label>
                                            <div class="input-box">
                                                <input id="txtManpowerCount" type="text" ng-model="ManPowerCount"  onblur="validateNumberAndDecimalOnly('#txtManpowerCount')" 
                                                       class="form-control text-right clear" onKeyUp="$(this).val($(this).val().replace(/[^\d]/ig, ''))"   />

                                                <div class="text-box-msg-r">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4 col-sm-6 col-xs-12 mgbt-xs-15">
                                            <label class="control-label">Address<span class="vd_red">*</span> </label>
                                            <div class="input-box">
                                                @Html.TextBox("txtAddress", "", new { @class = "form-control clear validate", @placeholder = "", @ng_model = "Address" })
                                                <div class="text-box-msg-r">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4 col-sm-6 col-xs-12 mgbt-xs-15">
                                            <label class="control-label">Pincode</label>
                                            <div class="input-box">
                                                <input class="form-control clear" id="txtpincode" ng-model="Pincode"  type="text" maxlength="6" onblur="validateNumberAndDecimalOnly('#txtpincode')" onKeyUp="$(this).val($(this).val().replace(/[^\d]/ig, ''))" />

                                                @*<input class="form-control clear validate" id="txtpincode" ng-model="Pincode"  ng-change="AllPincode()"  type="text" maxlength="6" placeholder="Pincode" />*@
                                                <div class="text-box-msg-r">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4 col-sm-4 col-xs-12 mgbt-xs-15">
                                            <label class="control-label">Country<span class="vd_red">*</span></label>
                                            <div class="input-box" ng-init="AllCountry()">
                                                <select id="ddlcountry" autocomplete='address-level2' class="select2 form-control validate" ng-change="AllState()" ng-model="CountryId">
                                                    <option value="">Select Country</option>
                                                    <option ng-repeat="x in AllCountryList" value="{{x.CountryId}}">{{x.CountryName}}</option>
                                                </select>
                                                <div class="text-box-msg-r">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4 col-sm-4 col-xs-12 mgbt-xs-15">
                                            <label class="control-label">State<span class="vd_red">*</span></label>
                                            <div class="input-box">
                                                <select id="ddlstate" autocomplete='address-level2' class="select2 form-control validate" ng-change="AllCity()" ng-model="StateId">
                                                    <option value="">Select State</option>
                                                    <option ng-repeat="x in AllStateList" value="{{x.SATE_CODE}}">{{x.STATE_NM}}</option>
                                                </select>
                                                <div class="text-box-msg-r">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4 col-sm-4 col-xs-12 mgbt-xs-15">
                                            <label class="control-label">City<span class="vd_red">*</span></label>
                                            <div class="input-box">
                                                <select id="ddlcity" autocomplete='address-level2' class="select2 form-control validate" ng-model="CityId">
                                                    <option value="">Select City</option>
                                                    <option ng-repeat="x in AllCityList" value="{{x.CITY_CODE}}">{{x.CITY_NAME}}</option>
                                                </select>
                                                <div class="text-box-msg-r">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4 col-sm-6 col-xs-12 mgbt-xs-15" style="display:none">
                                            <label class="control-label">Location</label>
                                            <div class="input-box">
                                                @Html.TextBox("txtLocationCode", "", new { @class = "form-control clear", @placeholder = "", @ng_model = "LocationCode" })
                                                <div class="text-box-msg-r">
                                                </div>
                                            </div>
                                        </div>
                                     
                                        <div class="col-md-4 col-sm-6 col-xs-12 mgbt-xs-15">
                                            <label class="control-label">Contact No </label>
                                            <div class="input-box">
                                                <input id="txtContactNo" class = "form-control clear" maxlength="10" onblur = "validatePhoneNo('#txtContactNo')" placeholder = "" ng-model = "MobileNo"  onKeyUp="$(this).val($(this).val().replace(/[^\d]/ig, ''))" />
                                                @*@Html.TextBox("txtContactNo", "", new { @class = "form-control clear",@maxlength="10", @onblur = "validatePhoneNo('#txtContactNo')", @placeholder = "", @ng_model = "MobileNo" })*@
                                                <div class="text-box-msg-r">
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-md-4 col-sm-6 col-xs-12 mgbt-xs-15" style="display:none">
                                            <label class="control-label">Providing Bank Details<span class="vd_red">*</span></label>
                                            <div class="input-box">
                                                @Html.TextBox("txtBankDetails", "", new { @class = "form-control clear", @placeholder = "", @ng_model = "BankDetails" })
                                                <div class="text-box-msg-r">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4 col-sm-4 col-xs-12 mgbt-xs-15" style="display:none">
                                            <label class="control-label">Account No<span class="vd_red">*</span></label>
                                            <div class="input-box">
                                                @Html.TextBox("txtAccountNo", "", new { @class = "form-control clear", @placeholder = "", @ng_model = "AccountNo" })
                                                <div class="text-box-msg-r">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4 col-sm-4 col-xs-12 mgbt-xs-15" style="display:none">
                                            <label class="control-label">Description<span class="vd_red">*</span></label>
                                            <div class="input-box">
                                                @Html.TextArea("txtDescription", "", new { @class = "form-control clear", @placeholder = "Description", @ng_model = "Description", @name = "txtDescription", @id = "txtDescription" })
                                                <div class="text-box-msg-r"></div>
                                            </div>
                                        </div>
                                        <div class="col-md-4 col-sm-6 col-xs-12 mgbt-xs-15">
                                            <label class="control-label">PAN NO.</label>
                                            <div class="input-box">
                                                @Html.TextBox("txtPanitno", "", new { @class = "form-control clear",@maxlength="10" ,@placeholder = "", @ng_model = "Panitno" })
                                                <div class="text-box-msg-r">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4 col-sm-6 col-xs-12 mgbt-xs-15">
                                            <label class="control-label">GSTIN/UIN</label>
                                            <div class="input-box">
                                                @Html.TextBox("txtGstinuin", "", new { @class = "form-control clear", @placeholder = "", @ng_model = "Gstinuin" })
                                                <div class="text-box-msg-r">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4 col-sm-6 col-xs-12 mgbt-xs-15"  >
                                            <label class="control-label">CLRA RC<span class="vd_red">*</span></label>
                                            <div class="input-box">
                                                <select id="ddlCLRARC" class="select2 form-control validate " ng-model="CLRARC" >
                                                    <option value="">Select</option>
                                                    <option value="1">Yes</option>
                                                    <option value="0">No</option>
                                                </select>
                                                <div class="text-box-msg-r">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4 col-sm-6 col-xs-12 mgbt-xs-15" style="display:none">
                                            <label class="control-label">CLRA LICENSE</label>
                                            <div class="input-box">  
                                                <select id="ddlCLRARC" class="select2 form-control" ng-model="CLRLIC" ng-disabled="loginType !='1'">
                                                    <option value="">Select</option>
                                                    <option value="1">Yes</option>
                                                    <option value="0">No</option>
                                                </select>
                                                <div class="text-box-msg-r">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4 col-sm-6 col-xs-12 mgbt-xs-15">
                                            <label class="control-label">Contact Person Name</label>
                                            <div class="input-box">
                                                @Html.TextBox("txtContactPerson", "", new { @class = "form-control clear", @placeholder = "", @ng_model = "ContactPerson" })
                                                <div class="text-box-msg-r">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4 col-sm-6 col-xs-12 mgbt-xs-15">
                                            <label class="control-label">Contact Person Mobile No.</label>
                                            <div class="input-box">
                                                <input id="txtContactMobile" class = "form-control clear" maxlength = "10" onblur = "validatePhoneNo('#txtContactMobile')" placeholder = "" ng-model = "ContactMobile"  onKeyUp="$(this).val($(this).val().replace(/[^\d]/ig, ''))" />
                                                @*@Html.TextBox("txtContactMobile", "", new { @class = "form-control clear", @maxlength = "10", @onblur = "validatePhoneNo('#txtContactMobile')", @placeholder = "", @ng_model = "ContactMobile" })*@
                                                <div class="text-box-msg-r">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4 col-sm-6 col-xs-12 mgbt-xs-15">
                                            <label class="control-label">Contact Person  Email Id </label>
                                            <div class="input-box">
                                                <input class="form-control clear " id="txtEmailID" ng-model="EmailId" onblur = "validateEmail('#txtEmailID')" type="email" />
                                                <div class="text-box-msg-r">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4 col-sm-6 col-xs-12 mgbt-xs-15">
                                            <label class="control-label">Descritpion</label>
                                            <div class="input-box">
                                                @Html.TextBox("txtDescritpion", "", new { @class = "form-control clear", @placeholder = "", @ng_model = "Descritpion" })
                                                <div class="text-box-msg-r">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4 col-sm-6 col-xs-12 mgbt-xs-15">
                                            <label class="control-label">Valid From  </label>
                                            <div class="input-box">
                                                @Html.TextBox("txtValidFrom", "", new { @class = "form-control clear", @type = "date", @placeholder = "", @ng_model = "ValidFrom" })
                                                <div class="text-box-msg-r">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4 col-sm-6 col-xs-12 mgbt-xs-15">
                                            <label class="control-label">Valid To</label>
                                            <div class="input-box">
                                                @Html.TextBox("txtValidTo", "", new { @class = "form-control clear",@type="date", @placeholder = "", @ng_model = "ValidTo" })
                                                <div class="text-box-msg-r">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4 col-sm-6 col-xs-12 mgbt-xs-15">
                                            <label class="control-label">Only Admin can Upload, Format will be PDF</label>
                                            <div class="input-box">
                                                <input type="file" id="fuCandidatePhoto{{$index}}"   onchange="angular.element(this).scope().Adminshow(this, '#AlbumIcon')" ng-disabled="loginType !='1'" ng-model="AdminFileDoc"  accept="application/pdf">
                                                <div class="text-box-msg-r">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4 col-sm-6 col-xs-12 mgbt-xs-15"  style="display:none">
                                            <label class="control-label">Only Vendor can Upload, Format will be PDF</label>
                                            <div class="input-box">
                                                <input type="file" id="Vendor{{$index}}" ng-disabled="loginType =='1'"  onchange="angular.element(this).scope().Vendorshow(this, '#AlbumIcon')" ng-model="VendorFileDoc" accept="application/pdf" >
                                                <div class="text-box-msg-r">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 ">
                                            @Html.Partial("ActionView")
                                        </div>

                                    </form>
                                </div>
                            </div>
                            @Html.Partial("SearchAngularJs")
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Row -->
    </div>

</div>

