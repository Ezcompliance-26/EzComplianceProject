@{
    ViewBag.Title = "Document Master";
    Layout = "~/Views/Shared/_GeneralLayout.cshtml";
}

<div class="container-fluid pagecontentbody">
    <div class="tab-content">
        <div class="pagebody removebg-color">
            <div class="col-md-12 pageheader pb-2">
                <div class="row">
                    <div class="col-md-12">
                        <h4 class="mb-0">Document Master</h4>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="row mb-3">
                    <div class="col-md-12 mb-3">
                        <div class="form-group">
                            <label>Act</label>
                            <input type="text" class="form-select" placeholder="Search Act..." />
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="form-group">
                            <label>Document Name</label>
                            <input type="text" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="form-group">
                            <label>Document Type</label>
                            <input type="text" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="form-group">
                            <label>Frequency</label>
                            <input type="text" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Required Format</label>
                            <select class="form-select">
                                <option>Select</option>
                                <option>PDF</option>
                                <option>Doc</option>
                                <option>JPEG/JPG</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="form-group">
                            <label>Note</label>
                            <input type="text" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="form-group">
                            <label>Mandatory Flag</label>
                            <select class="form-select">
                                <option>Select</option>
                                <option>Yes</option>
                                <option>No</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="form-group">
                            <label>Status</label>
                            <select class="form-select">
                                <option>Select</option>
                                <option>Active</option>
                                <option>Deactive</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="row mb-3 justify-content-center">
                    <div class="col-md-2 d-grid">
                        <a href="#" class="btn btn-warning">Create Document</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
