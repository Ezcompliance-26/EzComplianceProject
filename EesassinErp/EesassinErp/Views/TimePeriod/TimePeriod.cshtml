
@{
    ViewBag.Title = "TimePeriod";
    Layout = "~/Views/Common/_IframeMaster.cshtml";
}

  
<script src="~/scripts/myjslib/TimePeriodController.js"></script>
<input type="hidden" id="Id" name="Id" value="" ng-model="hfId" />
<div class="autohide-scroll autoheightset">
    <div class="br-pageheader">
        <!-- Title -->
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 root-t-p-n ">
            <h5 class="txt-dark">Time Period Master</h5>
        </div>
        <!-- Breadcrumb -->
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 hidden-sm">
            <ol class="breadcrumb">
                <li><span>Global</span></li>
                <li><span>Master</span></li>
                <li class="active"><span>€Time Period Master</span></li>
            </ol>
        </div>

    </div>
    <div class="br-pagebody">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="panel panel-default card-view shadow-base panel-refresh panel-Search-refresh">
                    <div class="refresh-container">
                        <div class="preloader">
                            <div class="circles-1">
                                <div class="circles-1-center"></div>
                                <div class="circles-1"></div>
                                <div class="circles-1"></div>
                                <div class="circles-1"></div>
                                <div class="circles-1"></div>
                                <div class="circles-1"></div>
                                <div class="circles-1"></div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-wrapper ">
                        <div class="panel-body">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 no-padding ">
                                <div class="collapse in" id="collapseinputbox">
                                    <form id="user-form">
                                        <div class="col-md-2 col-sm-6 col-xs-12 mgbt-xs-15" >
                                            <label class="control-label">client<span class="vd_red">*</span></label> 
                                            <div class="input-box" ng-init="AllParty()">
                                                <select id="ddlClientId" autocomplete='address-level2' class="select2 form-control validate" ng-model="ClientId"   >
                                                    <option value="">Select Client</option>
                                                    <option ng-repeat="x in AllPartyList | filter: { PartyType: 'Client' }" value="{{x.PartyId}}">{{x.PartyName}}</option>
                                                </select>
                                                <div class="text-box-msg-r">
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <div class="col-md-2 col-sm-6 col-xs-12 mgbt-xs-15" >
                                            <label class="control-label">Vendor<span class="">*</span></label> 
                                            <div class="input-box" ng-init="AllParty()">
                                                <select id="ddlVendorId" autocomplete='address-level2' class="select2 form-control validate" ng-model="VendorId" ng-change="AllPartySiteLoadWI(VendorId)">
                                                    <option value="">Select Vendor</option>
                                                    <option ng-repeat="x in AllPartyList | filter: { PartyType: 'Vendor' }" value="{{x.PartyId}}">{{x.PartyName}}</option>
                                                </select>
                                               
                                                <div class="text-box-msg-r">
                                                </div>
                                            </div> 
                                        </div>
                                       
                                        <div class="col-md-2 col-sm-6 col-xs-12 mgbt-xs-15" ng-init="BindFinacialYear()">
                                            <label class="control-label">Year<span class="vd_red">*</span></label>
                                            <div class="input-box">
                                                <select id="ddlfyid" autocomplete='address-level2' class="select2 form-control" ng-model="Year"  >
                                                    <option value="">Select</option>
                                                    <option ng-repeat="x in finacialyearList" value="{{x.FinancialName}}">{{x.FinancialName}}</option>
                                                </select> 
                                                <div class="text-box-msg-r">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-2 col-sm-6 col-xs-12 mgbt-xs-15" ng-init="BindMonth()">
                                            <label class="control-label">Month<span class="vd_red">*</span></label>
                                            <div class="input-box">
                                                <select id="ddlMONTH" autocomplete='address-level2' class="select2 form-control" ng-model="Month"   >
                                                    <option value="">Select</option>
                                                    <option ng-repeat="x in MonthList" value="{{x.MonthNumber}}">{{x.MonthName}}</option>
                                                </select>
                                                <div class="text-box-msg-r">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12 mgbt-xs-15">
                                            <label class="control-label">Site<span class="vd_red"></span></label>
                                            <div class="input-box">
                                                <select class="select2 form-control" ng-model="WClientSiteId" ng-change="SetSingleLocation(WClientSiteId)">
                                                    <option value="">Select Site</option>
                                                    <option ng-repeat="x in AllPartySiteCList" value="{{x.SiteId}}">{{x.SiteName}}</option>
                                                </select>
                                                <div class="text-box-msg-r">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12 mgbt-xs-15">
                                            <label class="control-label">Location<span class="vd_red"></span></label>
                                            <div class="input-box">
                                                <select id="ddlLocation" autocomplete='address-level2' class="form-control  clear" ng-model="WLocation">
                                                    <option value="">Select Location</option>
                                                    <option ng-repeat="x in LocationL" value="{{x.Location}}">{{x.Location}}</option>
                                                </select>
                                                <div class="text-box-msg-r">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-2 col-md-3 col-sm-6 col-xs-12 mgbt-xs-15">
                                            <label class="control-label">End Date<span class="vd_red"></span></label>
                                            <div class="input-box">
                                                <input id="EndDate" type="date" ng-model="EndDate" class="select2 form-control validate"   />

                                                <div class="text-box-msg-r">
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 ">
                                            @Html.Partial("ActionView")
                                        </div>

                                    </form>
                                </div>
                            </div>
                            @Html.Partial("SearchAngularJs")
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Row -->
    </div>

</div>