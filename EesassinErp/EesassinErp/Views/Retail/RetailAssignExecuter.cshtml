
@{
    ViewBag.Title = "Retail Assign Executer";
    ViewBag.TitleList = "Sort By Column";
    ViewBag.Version = System.Configuration.ConfigurationManager.AppSettings["version"];
    Layout = "~/Views/Common/_IframeMaster.cshtml";
}

<script src="~/scripts/RetailJsLib/RetailAssignExecuterController.js"></script>
<input type="hidden" id="Id" name="Id" value="" ng-model="hfId" />
<div class="autohide-scroll autoheightset">
    <div class="br-pageheader">
        <!-- Title -->
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 root-t-p-n ">
            <h5 class="txt-dark">Retail Assign Executer </h5>
        </div>
        <!-- Breadcrumb -->
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 hidden-sm">
            <ol class="breadcrumb">
                <li><span>Global</span></li>
                <li><span>Master</span></li>
                <li class="active"><span>Retail Assign Executer </span></li>
            </ol>
        </div>

    </div>
    <div class="br-pagebody">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="panel panel-default card-view shadow-base panel-refresh panel-Search-refresh">
                    <div class="refresh-container">
                        <div class="preloader">
                            <div class="circles-1">
                                <div class="circles-1-center"></div>
                                <div class="circles-1"></div>
                                <div class="circles-1"></div>
                                <div class="circles-1"></div>
                                <div class="circles-1"></div>
                                <div class="circles-1"></div>
                                <div class="circles-1"></div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-wrapper ">
                        <div class="panel-body">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 no-padding ">
                                <div class="collapse in" id="collapseinputbox">
                                    <form id="user-form">

                                       
                                        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12 mgbt-xs-15" ng-init="BindExecuter()">
                                            <label class="control-label">Select Executer<span class="vd_red">*</span></label>
                                            <div class="input-box">
                                               
                                                <select autocomplete='address-level2' class="select2 form-control validate" id="ddlUserList" ng-model="ExecuterId">
                                                    <option value="">Select</option>
                                                    <option ng-repeat="x in AllExecuter" value="{{x.ExecuterId}}">{{x.Name}}</option>
                                                </select>
                                                <div class="text-box-msg-r">
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12 mgbt-xs-15" ng-init="AllPartySiteLoad()">
                                            <label class="control-label">Select Mapping Client<span class="vd_red">*</span></label>
                                            <div class="input-box">
                                                <select id="ddlParty" autocomplete='address-level2' class="select2 form-control validate" ng-model="PartyId" ng-change="AllUserListsLoad(PartyId);">
                                                    <option value="">Select</option>
                                                    <option ng-repeat="x in AllPartyList" value="{{x.PartyId}}">{{x.PartyName}}</option>
                                                </select>
                                                <div class="text-box-msg-r">
                                                </div>
                                            </div>
                                        </div>
                                        @*<div class="col-lg-3 col-md-3 col-sm-6 col-xs-12 mgbt-xs-15">
                                            <label class="control-label">Select Mapping User<span class="vd_red">*</span></label>
                                            <div class="input-box">
                                                <select autocomplete='address-level2' class="select2 form-control validate" id="ddlUserList" ng-model="UserId">
                                                    <option value="">Select</option>
                                                    <option ng-repeat="x in AllUserList" value="{{x.LoginId}}">{{x.Name}}</option>
                                                </select>
                                                <div class="text-box-msg-r">
                                                </div>
                                            </div>
                                        </div>*@
                                        
                                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 ">
                                            @Html.Partial("ActionView")
                                        </div>

                                    </form>
                                </div>
                            </div>
                            @Html.Partial("SearchAngularJs")
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Row -->
    </div>

</div>
